{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build", "typecheck"],
            "outputs": ["dist/**"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck", "prisma:generate"],
            "cache": true
        },
        "prisma:generate": {
            "inputs": ["prisma/*.prisma"],
            "outputs": ["node_modules/.prisma/client/**", "prisma/generated/**"],
            "cache": true
        },
        "lint": {
            "cache": true
        },
        "lint:fix": {
            "cache": false
        },
        "test": {
            "cache": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
